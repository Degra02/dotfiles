{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 50,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["custom/spotify"],
    "modules-right": ["clock", "network", "battery", "backlight", "pulseaudio", "tray"], // "custom/notification",
    "hyprland/window": {
        "format": "{}"
    },
    // "output": "HDMI-A-1",
    //"output": ["DP-1", "HDMI-A-1"],
    "output" : "eDP-2",

    "hyprland/workspaces": {
        "sort-by-name": false,
        "sort-by-number": true,
        "disable-scroll": false,
        "all-outputs": true,
        "on-click": "activate"
    },

    "network": {
      "interface": "wlo1",
      "format": " {ifname}",
      "format-wifi": " ï‡«  {essid}",
      "format-ethernet": "{ipaddr}/{cidr} ï–",
      "format-disconnected": "ó°–ª No Network",
      "tooltip": false
    },


    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "clock": {
        "format": "ğŸ•‘ {:%H:%M ğŸ“… %d/%m/%Y}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "tooltip": true
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["ğŸŒ‘", "ğŸŒ’", "ğŸŒ“", "ğŸŒ”", "ğŸŒ•"],
