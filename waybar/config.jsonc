      "dynamic-importance-order": ["title", "artist", "album", "position", "length"],
      "player-icons": {
        "default": "â–¶",
        "mpv": "ğŸµ"
      },
      "status-icons": {
        "paused": "â¸"
      },
    },

    "custom/spotify": {
        "exec": "/usr/bin/python3 /home/degra/.config/waybar/scripts/mediaplayer.py",
        "format": " {} ï†¼ ",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },

    "bluetooth": {
        "format": "ïŠ” {status}",
        "format-connected": "ïŠ” {device_alias}",
        "format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
